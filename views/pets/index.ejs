<%- include('../partials/header') %>
  <% if (user) { %>
    <h2>Click on a pet below</h2>
    <% } else { %>
      <h2>Please log in</h2>
      <% } %>
          <table class='hideScrollbar' id="list">
            <thead>
            </thead>
            <tbody>
              <% pets.forEach(p=> { %>
                <tc>
                  <% if (user) { %>
                    <td><a href="/pets/<%= p._id %>"><img src="/images/<%= p.name %>.jpg" /></a></td>
                    <% } else { %>
                      <td><img src="/images/<%= p.name %>.jpg" /></td>
                      <% } %>
                        <% }) %>
                </tc>
            </tbody>
          </table>

          <%- include('../partials/footer') %>